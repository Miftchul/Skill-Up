<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.agus_221111031.skillup">

    <!-- Izin untuk notifikasi -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SkillUp"
        tools:targetApi="31">

        <!-- SplashActivity sebagai titik masuk aplikasi -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Halaman utama berisi daftar kursus -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Activity untuk halaman tentang -->
        <activity
            android:name=".AboutActivity"
            android:exported="false" />

        <!-- Activity untuk detail kursus -->
        <activity
            android:name=".DetailActivity"
            android:exported="false" />

        <!-- Activity untuk menampilkan konten kursus -->
        <activity
            android:name=".CourseContentActivity"
            android:exported="false" />
    </application>
</manifest>